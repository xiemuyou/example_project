<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F2F2F2"
    android:paddingStart="@dimen/px_0"
    android:paddingEnd="@dimen/px_24"
    android:paddingBottom="@dimen/px_24">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_88"
        android:background="@drawable/bg_text_sort"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_label_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/add"
            android:src="@drawable/icon_add_big" />

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px_12"
            android:gravity="center"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_2C2C2C"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>