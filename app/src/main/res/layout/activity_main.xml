<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llHomeBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMainHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/home"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/home_select" />

        <ImageView
            android:id="@+id/ivMainVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/video"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/video_unselect" />

        <ImageView
            android:id="@+id/ivMainMine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/mine"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/mine_unselect" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/flHomContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llHomeBottom"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_above="@id/llHomeBottom"
        android:background="@drawable/page_bottom_line"
        android:contentDescription="@string/line" />

</RelativeLayout>
